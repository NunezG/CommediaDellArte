<!-- Toucher mechamment -->
<event id="toucher_mechamment">
	<guiManager active="false"/>

	<character name="Arlequin">
		<deplacement x="13" y="7" z="30"/>
		<rotation x="0" y="180" z="0"/>		
	</character>
	
	<multiple>	
		<character name="Arlequin">
			<animation name="frappe"/>	
			<sound name="Frappe" wait="false"/>		
		</character>	
	</multiple>
	
	<souffleur position="milieu">
		<talk>
			<paragraph>Mais que fais-tu ? Ce coffre ne t'as rien fait !</paragraph>
		</talk>
	</souffleur>
	
	<character name="Arlequin">
		<rotation x="0" y="180" z="0"/>		
	</character>
	
	<guiManager active="true"/>
</event>


