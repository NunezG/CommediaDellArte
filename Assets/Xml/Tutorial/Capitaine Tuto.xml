<EventList>

<!-- Toucher mechamment -->
<event id="toucher_mechamment">
	<guiManager active="false"/>

	<character name="Arlequin">
		<deplacement x="-10" y="7" z="30"/>
	</character>
	
	<multiple>	
		<character name="Arlequin">
			<animation name="frappe"/>	
			<sound name="Frappe" wait="false" volume="1"/>	
			<sound name="5_touche_mechant" wait="false" volume="1" />
		</character>	
		<character name="Capitaine">
			<animation name="peur"/>
			<sound name="3_peur_1" wait="false" volume="1" />	
		</character>
	</multiple>
	
	<souffleur position="milieu">
			<feedback type="good" time="1"/>
	</souffleur>

	<guiManager active="true"/>
	
</event>


