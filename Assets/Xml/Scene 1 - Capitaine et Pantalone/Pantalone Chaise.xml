<!-- Question -->
<event id="question">
	<guiManager active="false"/>
	
	<character name="Arlequin">
	    <deplacement x="4" y="6.7" z="31"/>
	</character>

	<multiple>
	    <character name="Arlequin">
		    <sound name="8_poser_question" wait="false" volume="1"/>
